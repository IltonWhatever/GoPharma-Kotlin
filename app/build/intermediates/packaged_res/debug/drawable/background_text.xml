<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
        <item>
            <solid android:color="#FFFFFF"/> <!-- Cor de preenchimento do EditText -->
            <stroke android:color="#FFFFFF" android:width="2dp"/> <!-- Cor e espessura da borda do EditText -->
            <corners android:radius="8dp"/> <!-- Raio dos cantos do EditText -->
        </item>
        <item
            android:top="2dp"
            android:right="2dp"
            android:bottom="0dp"
            android:left="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Cor da sombra desejada -->
        </shape>
    </item>
</layer-list>
    </item>
    </selector>
